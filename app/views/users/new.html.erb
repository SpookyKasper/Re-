<%= form_with model: @user do |form| %>
  <%= form.label :username, 'Your cool username' %>
  <%= form.text_field :username, placeholder: 'cool-name' %>
  <%= form.label :email, 'Email', value: 'mymail@gmail.com' %>
  <%= form.email_field :email, placeholder: 'abc@exemple.com' %>
  <%= form.label :password, 'Password' %>
  <%= form.password_field :password%>
  <%= form.submit 'Submit' %>
<% end %>
